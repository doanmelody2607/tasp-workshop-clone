<header
    id="header"
    class="bg-white dark:bg-gray-900 shadow-md dark:shadow-white w-full py-4 z-50 fixed top-0 transition-all transform ease-in-out duration-500 page-lazy-image"
>
    <div class="container flex items-center flex-wrap justify-between">
        <div class="sm:mr-8 transition ease-in-out">
            <a class="flex items-center" hx-push-url="true" href="{{ '/' | url }}">
                <img class="h-10 w-auto block" src="{{ '/assets/img/logo.png' }}" alt="Your Company" />
                {#
                <img class="h-10 w-auto hidden dark:block" src="{{ '/assets/img/lightlogo.png' }}" alt="Your Company" />
                #} {#
                <span class="text-xl text-blue-500 dark:text-white font-semibold self-center">{{ site.title }}</span>
                #}
            </a>
        </div>
        <nav
            id="menu"
            class="order-last md:order-none items-center flex-grow w-full md:w-auto md:flex hidden mt-2 md:mt-0"
        >
            {% for item in menu %}
            <a
                href="{{ item.url | url }}"
                {%
                if
                item.newTab
                %}
                target="_blank"
                rel="noopener"
                {%
                endif
                %}
                class="block font-semibold mt-4 md:inline-block md:mt-0 rounded-md px-3 py-2 text-sm hover:text-blue-400 {% if item.url == (page.url | firstPathUrl) %} text-blue-400 {% endif %} prose dark:prose-invert transition ease-in-out"
                aria-current="page"
                >{{ item.label }}</a
            >
            {% endfor %}
        </nav>
        {% include "partials/darkmode.njk" %}
        <div
            id="menu-toggle"
            class="flex items-center md:hidden text-slate-700 hover:text-blue-400 dark:text-white prose dark:prose-invert cursor-pointer sm:ml-6"
        >
            {% include "icons/menu.svg" %}
        </div>
    </div>
</header>
