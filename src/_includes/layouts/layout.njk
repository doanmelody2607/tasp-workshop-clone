<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="shortcut icon" type="image/ico" href="{{ '/assets/img/favicon.ico' | url }}" />
        <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}" />
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
        <script src="{{ '/assets/js/htmx.min.js' | url }}"></script>
        <!-- Grab title from the page data and dump it here -->
        <title>{{ title }}</title>
    </head>
    <body
        class="bg-white dark:bg-gray-900 transition-all ease-in-out"
        hx-boost="true"
        hx-ext="preload"
        hx-trigger="load, submit"
    >
        {% include "partials/header.njk" %}
        <main class="mt-[4.5rem]">
            {{ content | safe }}
        </main>
        {% include "partials/footer.njk" %}

        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>
        <script src="{{ '/assets/js/bundle.js' | url }}"></script>
    </body>
</html>
